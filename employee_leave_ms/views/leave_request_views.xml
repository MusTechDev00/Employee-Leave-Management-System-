<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="leave_request_list_view" model="ir.ui.view">
        <field name="name">leave.request.list</field>
        <field name="model">leave.request</field>
        <field name="arch" type="xml">
            <list string="Leave Request">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="leave_type_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="number_of_days"/>
                <field name="reason"/>
                <field name="state"/>
                <field name="manager_id"/>
                <!--                <field name="rejection_reason"/>-->
            </list>
        </field>
    </record>


    <record id="leave_request_form_view" model="ir.ui.view">
        <field name="name">leave.request.form</field>
        <field name="model">leave.request</field>
        <field name="arch" type="xml">
            <form string="Leave Request">
                <header>
                    <button name="action_submit_request" type="object" string="Submit Request" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_approve_request" type="object" string="Approve" class="oe_highlight"
                            invisible="state != 'to_approve'"/>
                    <button name="action_refuse_request" type="object" string="Refuse"
                            invisible="state != 'to_approve'"/>
                    <button name="action_cancel_request" type="object" string="Cancel"
                            invisible="state in ['draft', 'canceled', 'refused']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,refused"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>

                        <field name="employee_id"/>
                        <field name="leave_type_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="number_of_days"/>
                        <!--                        <field name="reason"/>-->

                        <field name="manager_id"/>
                        <!--                        <field name="rejection_reason"/>-->
                    </group>
                    <notebook>
                        <page string="Reason">
                            <field name="reason"/>
                        </page>
                        <page string="Rejection Details" invisible="state != 'refused'">
                            <field name="rejection_reason"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_leave_request" model="ir.actions.act_window">
        <field name="name">Leave Request</field>
        <field name="res_model">leave.request</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>