<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="leave_types_list_view" model="ir.ui.view">
        <field name="name">leave.type.list</field>
        <field name="model">leave.type</field>
        <field name="arch" type="xml">
            <list string="Leave Types">
                <field name="name"/>
                <field name="limit"/>
                <field name="is_paid"/>
                <field name="description_leave"/>
            </list>
        </field>
    </record>


    <record id="leave_types_form_view" model="ir.ui.view">
        <field name="name">leave.type.form</field>
        <field name="model">leave.type</field>
        <field name="arch" type="xml">
            <form string="Leave Types">
                <group>
                    <field name="name"/>
                    <field name="limit"/>
                    <field name="is_paid"/>
                    <field name="description_leave"/>
                </group>
            </form>
        </field>
    </record>


    <record id="action_leave_type" model="ir.actions.act_window">
        <field name="name">Leave Type</field>
        <field name="res_model">leave.type</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>